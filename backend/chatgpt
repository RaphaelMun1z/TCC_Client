const express = require('express');
const router = express.Router();

// Rota para listar todos os estabelecimentos
router.get('/establishments', (req, res) => {
  // implementação da lógica para listar estabelecimentos
});

// Rota para obter detalhes de um estabelecimento
router.get('/establishments/:id', (req, res) => {
  // implementação da lógica para obter detalhes do estabelecimento
});

// Rota para listar todas as seções de um estabelecimento específico
router.get('/establishments/:id/sections', (req, res) => {
  // implementação da lógica para listar seções do estabelecimento
});

// Rota para obter detalhes de uma seção específica em um estabelecimento específico
router.get('/establishments/:id/sections/:id', (req, res) => {
  // implementação da lógica para obter detalhes da seção
});

// Rota para listar todas as categorias de uma seção específica em um estabelecimento específico
router.get('/establishments/:id/sections/:id/categories', (req, res) => {
  // implementação da lógica para listar categorias da seção
});

// Rota para obter detalhes de uma categoria específica em uma seção específica em um estabelecimento específico
router.get('/establishments/:id/sections/:id/categories/:id', (req, res) => {
  // implementação da lógica para obter detalhes da categoria
});

// Rota para listar todos os produtos de uma categoria específica em uma seção específica em um estabelecimento específico
router.get('/establishments/:id/sections/:id/categories/:id/products', (req, res) => {
  // implementação da lógica para listar produtos da categoria
});

// Rota para obter detalhes de um produto específico em uma categoria específica em uma seção específica em um estabelecimento específico
router.get('/establishments/:id/sections/:id/categories/:id/products/:id', (req, res) => {
  // implementação da lógica para obter detalhes do produto
});

module.exports = router;






const express = require('express');
const app = express();
const routes = require('./routes');

// Define o caminho base da API
app.use('/api', routes);

// Inicia o servidor
app.listen(3000, () => console.log('API rodando na porta 3000'));
